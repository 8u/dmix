<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.namelessdev.mpdroid" android:versionCode="20" android:versionName="1.0">
	
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<!-- Required for JmDNS to see services available on the network -->
	<uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
	
	<application android:icon="@drawable/icon"
		android:label="@string/app_name" android:name=".MPDApplication" android:hardwareAccelerated="true">
		<!-- android:debuggable="true" -->
		<activity android:name=".MainMenuActivity" android:label="@string/app_name"
			android:launchMode="singleTop">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="com.namelessdev.mpdroid.PLAYBACK_VIEWER" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<receiver android:name=".MainMenuActivity$MyIntentReceiver" />
			<!--
				<meta-data android:name="android.app.default_searchable"
				android:value=".SearchActivity" />
			-->
		</activity>

		<activity android:name=".SearchArtistActivity" android:label="@string/search">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable_artist" />

		</activity>
		<activity android:name=".SearchAlbumActivity" android:label="@string/search">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable_album" />

		</activity>
		<activity android:name=".SearchSongActivity" android:label="@string/search">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable_song" />
		</activity>
		<activity android:name=".PlaylistActivity" android:label="@string/playlist" >
		</activity>
		<activity android:name=".PlaylistRemoveActivity" android:label="@string/playlist" >
		</activity>
		<activity android:name=".PlaylistManagerActivity" android:label="@string/playlist">
		</activity>
		<activity android:name=".PlaylistSaveActivity" android:label="@string/playlist">
		</activity>
		<activity android:name=".ArtistsActivity" android:label="@string/artists">
			<meta-data android:name="android.app.default_searchable"
				android:value=".SearchArtistActivity" />
		</activity>
		<activity android:name=".SettingsActivity" android:label="@string/settings" />
		<activity android:name=".WifiConnectionSettings"
			android:label="@string/settings" />
		<activity android:name=".ConnectionSettings" android:label="@string/settings" />
		<activity android:name=".FSActivity" android:label="@string/files" />
		<activity android:name=".AlbumsActivity" android:label="@string/albums" >
			<meta-data android:name="android.app.default_searchable"
				android:value=".SearchAlbumActivity" />
		</activity>
		<activity android:name=".SongsActivity" android:label="@string/artists" >
		</activity>
		<activity android:name=".SongSearchMessage" android:label="@string/albums">
			<meta-data android:name="android.app.default_searchable"
				android:value=".SearchSongActivity" />
		</activity>
		
		<activity android:name=".ServerListActivity" />
		<activity android:name=".ServerEditActivity" />
		<activity android:name=".ServerBonjourListActivity" />
		
		<activity android:name=".AboutActivity" android:label="@string/about" />
		<activity android:name=".WebViewActivity" android:theme="@android:style/Theme.Black.NoTitleBar" />
		<activity android:name=".WarningActivity" android:label="@string/warningTitle"  android:theme="@android:style/Theme.Dialog" />
		<activity android:name=".LibraryTabActivity" android:label="@string/libraryTabActivity" />
		<activity android:name=".honeycomb.LibraryTabActionActivity" android:label="@string/libraryTabActivity" />

		<service android:enabled="true" android:name="StreamingService" />
		<receiver android:name="com.namelessdev.mpdroid.RemoteControlReceiver">
			<intent-filter android:priority="500">
				<action android:name="android.intent.action.MEDIA_BUTTON" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.media.AUDIO_BECOMING_NOISY" />
			</intent-filter>
		</receiver>
		
		<provider android:name=".providers.ServerListProvider"
          android:authorities="com.namelessdev.mpdroid.providers.serverlist"
          android:exported="false">
		</provider>
		<receiver android:name=".widgets.SimpleWidgetProvider">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE"></action>
			</intent-filter>
			<meta-data android:name="android.appwidget.provider" android:resource="@xml/simple_widget_provider"></meta-data>
		</receiver>
	</application>
	
	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="11" />

</manifest> 